{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "allowJs": true,
    "checkJs": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "resolveJsonModule": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitAny": false,
    "outDir": "./dist",
    "declaration": true,
    "declarationDir": "./dist",
    "emitDeclarationOnly": true,
    "paths": {
      "unocss-preset-marumaru": [
        "./src"
      ]
    }
  },
  "include": [
    "./src/**/*.ts",
    "./tests/**/*"
  ],
  "exclude": [
    "**/node_modules/**"
  ]
}
